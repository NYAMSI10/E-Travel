    <style>
        .ok {
            margin: 80px 0px 20px;
            padding: 0px 50px;
        }

        .ok h2 {
            text-align: center;
            color: #acacac;
            font-size: 40px;
            font-weight: 400;
        }

        .ok .grid {
            margin-top: 50px;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 20px;
        }

        .ok .grid .form-element {
            width: 200px;
            height: 200px;
            box-shadow: 0px 0px 20px 5px rgba(100, 100, 100, 0.1);
        }

        .ok .grid .form-element input {
            display: none;
        }

        .ok .grid .form-element img {
            width: 200px;
            height: 200px;
            object-fit: cover;
        }

        .ok .grid .form-element div {
            position: relative;
            height: 40px;
            margin-top: -40px;
            background: rgba(0, 0, 0, 0.5);
            text-align: center;
            line-height: 40px;
